
main
    h1 Examen de web !!!
    section
        fieldset
            #question {{question.question_text}}
            div([class.borderBonneReponse]='isAnswered && goodAnswer == 1')
                input([disabled]='isAnswered', type="radio", name="response", (click)='validate(1)')
                |1. {{question.choix_un}}
            div([class.borderBonneReponse]='isAnswered && goodAnswer == 2')
                input([disabled]='isAnswered', type="radio", name="response", (click)='validate(2)')
                |2. {{question.choix_deux}}
            div([class.borderBonneReponse]='isAnswered && goodAnswer == 3')
                input([disabled]='isAnswered', type="radio", name="response", (click)='validate(3)')
                |3. {{question.choix_trois}}
            div([class.borderBonneReponse]='isAnswered && goodAnswer == 4')
                input([disabled]='isAnswered', type="radio", name="response", (click)='validate(4)')
                |4. {{question.choix_quatre}}
            div
                a([routerLink]="['/tableauBord']" class="button") Retour au menu
                button.button([disabled]='!isAnswered', (click)='getQuestion()') Question suivante
                
        aside
            h1 Statistiques
            p#note 

