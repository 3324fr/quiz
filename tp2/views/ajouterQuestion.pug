extends layout

block content
  main
    h1 Menu personnel
    form(method='Post', action='ajouterQuestion')
        fieldset
            legend Ajouter d'une question
            #label(for='sujet') Sujet de la question
            select(name='sujet', id='sujet')
                option(value='html') HTML5
                option(value='css') CSS3
                option(value='js') Javascript
            #label(for'textquestion') Question
            input(name='textquestion', type='text', id='textquestion')
            #label(for'choixun') Choix #1
            input(name='choixun', type='text', id='choixun')
            #label(for'choixdeux') Choix #2
            input(name='choixdeux', type='text', id='choixdeux')
            #label(for'choixtrois') Choix #3
            input(name='choixtrois', type='text', id='choixtrois')
            #label(for'choixquatre') Choix #4
            input(name='choixquatre', type='text', id='choixquatre')
            #label(for='reponse') Reponse de la question
            select(name='reponse', id='reponse')
                option(value=1) 1
                option(value=2) 2
                option(value=3) 3
                option(value=4) 4
            p
            input(type='submit', value='Ajouter')
block js
    script(src='js/tableauBord.js')
        
